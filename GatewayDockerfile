FROM INSERT_BASE_IMAGE

RUN ulimit -n 65536 && \
    mkdir -p /usr/local/share/lua/5.1/kong/plugins/auth_sign && \
    mkdir -p /usr/local/share/lua/5.1/kong/plugins/platform-identification

## Copy Plugin files
COPY plugins/auth-sign/handler.lua /usr/local/share/lua/5.1/kong/plugins/auth_sign/handler.lua
COPY plugins/auth-sign/schema.lua /usr/local/share/lua/5.1/kong/plugins/auth_sign/schema.lua
COPY plugins/platform-identification/handler.lua /usr/local/share/lua/5.1/kong/plugins/platform-identification/handler.lua
COPY plugins/platform-identification/schema.lua /usr/local/share/lua/5.1/kong/plugins/platform-identification/schema.lua

